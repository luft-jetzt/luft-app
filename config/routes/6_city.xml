<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="map" path="/overview">
        <default key="_controller">App\Controller\MapController::mapAction</default>
        <option key="expose">true</option>
    </route>

    <route id="twitter_city" path="/twitter-success">
        <default key="_controller">App\Controller\CityController::twitterSuccessAction</default>
    </route>

    <route id="show_city" path="/{citySlug}">
        <default key="_controller">App\Controller\CityController::showAction</default>
        <option key="expose">true</option>
        <requirement key="citySlug">^([A-Za-z-]+)$</requirement>
    </route>
</routes>

