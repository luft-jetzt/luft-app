<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.admin.station" class="AppBundle\Admin\StationAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Luft" label="Station" />
            <argument />
            <argument>AppBundle\Entity\Station</argument>
            <argument />
        </service>

        <service id="app.admin.city" class="AppBundle\Admin\CityAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Luft" label="City" />
            <argument />
            <argument>AppBundle\Entity\City</argument>
            <argument>AppBundle:Admin/City</argument>
        </service>

        <service id="app.admin.twitter_schedule" class="AppBundle\Admin\TwitterScheduleAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Luft" label="Twitter Schedule" />
            <argument />
            <argument>AppBundle\Entity\TwitterSchedule</argument>
            <argument />
        </service>
    </services>
</container>
